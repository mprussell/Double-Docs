{
  "name": "double-docs",
  "productName": "Double Docs",
  "appId": "uk.co.mrussell.double-docs",
  "version": "1.1.0",
  "license": "MIT",
  "description": "A simple two-up, single-window Google Docs editor for writers built in Electron.",
  "author": "Mark Russell <mark@mrussell.co.uk> @mrkrsl",
  "copyright": "Copyright Â© 2020 Mark Russell",
  "main": "main.js",
  "build-resources": "build",
  "output": "dist",
  "mac": {
    "category": "public.app-category.productivity",
    "target": "dmg",
    "icon": "build/icon.icns"
  },
  "dmg": {
    "title": "${productName} ${version}"
  },
  "win": {
    "target": "nsis",
    "icon": "build/icon.ico"
  },
  "linux": {
    "target": "AppImage",
    "icon": "build/512x512.png",
    "category": "Office"
  },
  "dependencies": {},
  "devDependencies": {
    "electron": "9.2.0"
  },
  "scripts": {
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "start": "electron ."
  }
}
